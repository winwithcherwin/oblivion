#!/bin/sh

# Get terminal width
cols=$(tput cols 2>/dev/null || echo 80)

# Banner text
text="ｏｂｌｉｖｉｏｎ"
display_width=16  # known width of this text (8 chars, each full-width)

# Calculate left padding
padding=$(( (cols - display_width) / 2 ))
[ "$padding" -lt 0 ] && padding=0

# Colors
BOLD_PURPLE="\033[1;35m"
RESET="\033[0m"

# Output with vertical spacing
printf "\n\n\n%*s${BOLD_PURPLE}%s${RESET}\n\n\n" "$padding" "" "$text"

