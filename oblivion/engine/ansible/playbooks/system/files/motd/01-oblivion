#!/bin/bash

# Terminal width
WIDTH=$(tput cols 2>/dev/null || echo 80)

# Banner
BANNER="ｏｂｌｉｖｉｏｎ"
SUBTEXT="Welcome."
BANNER_WIDTH=16         # 8 full-width Unicode characters = 16 columns
SUBTEXT_WIDTH=${#SUBTEXT}

# Padding calculation
BANNER_PAD=$(( (WIDTH - BANNER_WIDTH) / 2 ))
SUBTEXT_PAD=$(( (WIDTH - SUBTEXT_WIDTH) / 2 ))

# Colors
BOLD_PURPLE="\033[1;35m"
RESET="\033[0m"

# Output
printf "\n\n\n"
printf "%*s${BOLD_PURPLE}%s${RESET}\n" "$BANNER_PAD" "" "$BANNER"
printf "%*s%s\n" "$SUBTEXT_PAD" "" "$SUBTEXT"
printf "\n\n"

