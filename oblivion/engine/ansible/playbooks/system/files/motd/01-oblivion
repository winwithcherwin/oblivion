#!/bin/bash
# updated at: Mon Mar 24 04:41:20 PM UTC 2025

# Get the terminal width, or default to 80 if unavailable
WIDTH=$(tput cols 2>/dev/null || echo 80)

# Define the banner and subtext
BANNER="ｏｂｌｉｖｉｏｎ"
SUBTEXT="Welcome."

# Calculate display widths using GNU Awk's strwidth function
BANNER_DISPLAY_WIDTH=$(awk -v s="$BANNER" 'BEGIN { print strwidth(s) }')
SUBTEXT_DISPLAY_WIDTH=$(awk -v s="$SUBTEXT" 'BEGIN { print strwidth(s) }')

# Compute left padding for centering
BANNER_PADDING=$(awk -v w="$WIDTH" -v d="$BANNER_DISPLAY_WIDTH" 'BEGIN { printf "%d", (w - d) / 2 }')
SUBTEXT_PADDING=$(awk -v w="$WIDTH" -v d="$SUBTEXT_DISPLAY_WIDTH" 'BEGIN { printf "%d", (w - d) / 2 }')

# Colors
BOLD_PURPLE="\033[1;35m"
RESET="\033[0m"

# For debugging, you can uncomment these lines:
# echo "Terminal width: $WIDTH"
# echo "Banner display width: $BANNER_DISPLAY_WIDTH, Padding: $BANNER_PADDING"
# echo "Subtext display width: $SUBTEXT_DISPLAY_WIDTH, Padding: $SUBTEXT_PADDING"

# Print with vertical breathing space: 3 blank lines above and 2 below
printf "\n\n\n"
printf "%*s%s\n" "$BANNER_PADDING" "" "${BOLD_PURPLE}${BANNER}${RESET}"
printf "%*s%s\n" "$SUBTEXT_PADDING" "" "$SUBTEXT"
printf "\n\n"

