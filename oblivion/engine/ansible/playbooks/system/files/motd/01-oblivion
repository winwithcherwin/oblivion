#!/bin/sh

# Use tput if we’re in a terminal
cols=$(tput cols 2>/dev/null || echo 80)

# Our banner
text="ｏｂｌｉｖｉｏｎ"

# Calculate display width (each wide char like ｏ counts as 2)
text_width=$(echo -n "$text" | wc -m)
text_display_width=$((text_width * 2))

# Compute left padding
padding=$(( (cols - text_display_width) / 2 ))
[ "$padding" -lt 0 ] && padding=0

# Colors
BOLD_PURPLE="\033[1;35m"
RESET="\033[0m"

# Output with vertical breathing room
printf "\n\n\n%*s${BOLD_PURPLE}%s${RESET}\n\n\n" "$padding" "" "$text"

