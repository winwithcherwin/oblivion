#!/bin/sh

# Get terminal width or fallback to 80
cols="$(tput cols 2>/dev/null || echo 80)"

text="ｏｂｌｉｖｉｏｎ"

# Calculate center padding
text_len="${#text}"
padding=$(( (cols - text_len) / 2 ))
[ "$padding" -lt 0 ] && padding=0

# Colors
BOLD_PURPLE="\033[1;35m"
RESET="\033[0m"

# Print with breathing room
printf "\n\n${BOLD_PURPLE}%*s%s${RESET}\n\n" "$padding" "" "$text"

